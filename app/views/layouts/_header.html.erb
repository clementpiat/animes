<%# hide_nav: (false) %>
<%# floating: (false) %>
<%
  hide_nav ||= false
  floating ||= false
%>

<nav class="navbar navbar-light bg-light <%= 'navbar-fixed-top' if floating %>">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag('anime_playlist_logo.png', size: '130x90'), main_app.root_path, class: 'brand' %>


      <!--      <div class="navbar-text brand-text">TODO</div>-->
      <!--      <span id="branding"><%#= content_for(:navbar_branding).presence || 'Applications' %></span>-->

      <div id="user_controls_menu">
        <% if false #user_signed_in? %>
          <span class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.email %> &blacktriangledown;
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Account Settings", main_app.edit_user_registration_path %>
                <%= link_to "Logout", main_app.destroy_user_session_path, method: :delete %>
              </li>
            </ul>
            | <%= link_to "Dashboard", main_app.dashboard_path %>
          </span>
        <% else %>
          
        <% end %>
      </div>


      <% if !hide_nav %>
        <ul class="nav">
          <li>
            <%= link_to 'Animes', main_app.animes_path, class: 'btn btn-light' %>
          </li>

          <li>
            <%= link_to 'Playlists', main_app.playlists_path, class: 'btn btn-light' %>
          </li>
        </ul>
      <% end %>

    </div>
  </div>
</nav>
