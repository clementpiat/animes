<%
  hide_nav ||= false
  floating ||= false
%>

<nav class="navbar <%= 'fixed-top' if floating %>">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag('anime_playlist_logo.png', size: '130x90'), main_app.root_path, class: 'brand' %>

      <% if !hide_nav %>
        <ul class="nav">
          <li>
            <%= link_to 'Playlists', main_app.playlists_path, class: 'btn btn-light' %>
          </li>
        </ul>
      <% end %>

      <div id="user_controls_menu">
        <% if current_user.present? %>
          <span class="dropdown navbar-text">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.email %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%#= link_to "Account Settings", main_app.edit_user_registration_path %>
                <%= link_to "Logout", main_app.logout_path, method: :get %>
              </li>
            </ul>
          </span>
        <% else %>
          <%= link_to "Login", main_app.login_path, method: :get %>
        <% end %>
      </div>

    </div>
  </div>
</nav>
