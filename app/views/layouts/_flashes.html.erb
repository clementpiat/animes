<% if flash.any? %>
  <div class="flashes">
    <% flash.each do |type, msg| %>
      <% puts type %>
      <% next if msg.blank? || !msg.is_a?(String) %>
      <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %>">
        <button class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>