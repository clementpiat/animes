-# playlist
-# anime

- form_id = "custom_musics_form-#{anime.id}"
= form_tag add_custom_music_playlist_path(id: @playlist.id, anime_id: anime.id), method: :post, remote: true, class: 'form-inline', id: form_id do
    .form-group.row{style: 'margin-right: 10px; margin-left: 10px;'}
        = label_tag :youtube_video_url, 'Youtube URL', class: 'col-form-label'
        %div
            = text_field_tag :youtube_video_url, '', class: 'form-control', 
                placeholder: 'https://www.youtube.com/watch?v=faqmNf_fZlE', style: 'width: 21vw; margin-left: 1vw;'

    = submit_tag 'Add', class: 'btn btn-primary' 